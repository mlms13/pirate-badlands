.container
    margin auto
    max-width 700px
    text-align center

.grid
    margin 34px auto 0
    max-width 420px

.grid-row
    clear both
    display flex

.grid-tile
    background-repeat no-repeat
    background-size 100%
    color #fff
    cursor pointer
    flex 1
    float left
    font-family sans-serif
    height 91px
    line-height 57px
    margin-top -34px
    position relative
    width 70px

    &:hover
        top -7px

.water
    background-image url('../images/water.png')

.land
    background-image url('../images/land.png')
    color #000

.visited
    background-image url('../images/water_dark.png')

.booty
    background-image url('../images/land-chest.png')

    &.open
        background-image url('../images/land-chest-open.png')

.selected
    opacity 0.75