*
    box-sizing border-box

img
    max-width 100%

html,
body
    margin 0
    min-height 100%
    padding 0

body
    background url('../images/background.svg') 50% 100px no-repeat, linear-gradient(to bottom, #00bfff, #166781) 100%

#resetGame
    visibility hidden

.container
    background rgba(255, 255, 255, 0.5)
    border-radius 5px
    box-shadow 1px 1px 5px rgba(0, 0, 0, 0.3)
    margin 50px auto 0
    max-width 500px
    min-height 450px
    text-align center

.site-header h1
    background url('../images/plank.png')
    background-size cover

.btn-primary
    background-color #754c29
    background-image linear-gradient(to bottom, #a67e5a, #754c29)
    background-size 100% 200%
    border-color rgba(0,0,0,0.1) rgba(0,0,0,0.1) rgba(0,0,0,0.25)
    color #fff
    text-shadow 0 -1px 0 rgba(0,0,0,0.25)

    &:hover
        background-position: 0 100%;

.btn-small
    padding 2px 8px
    font-size 11.5px
    margin-top 0