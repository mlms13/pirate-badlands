*
    box-sizing border-box

html,
body
    margin 0
    min-height 100%
    padding 0

body
    background url('../images/background.svg') 50% 100px no-repeat, linear-gradient(to bottom, #00bfff, #166781) 100%

#resetGame
    visibility hidden

.container
    background rgba(255, 255, 255, 0.5)
    border-radius 5px
    box-shadow 1px 1px 5px rgba(0, 0, 0, 0.3)
    margin 50px auto 0
    max-width 500px
    min-height 450px
    text-align center
